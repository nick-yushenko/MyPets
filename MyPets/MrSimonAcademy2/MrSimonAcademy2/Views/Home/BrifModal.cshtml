@model MrSimonAcademy2.Models.ContactViewModel



<div class="modal modal-brif">
    <div class="modal-bg"></div>
    <div class="modal-block wrap">
        <div class="close-modal"></div>
        <h2 class="section-title modal-title">
            Запишитесь на бесплатный пробный урок
        </h2>
        <span class="modal-subtitle section-subtitle">
            Заполните форму, а Саймон свяжется с Вами в течение дня и ответит на все вопросы
        </span>
        <img src="~/Content/img/simon/simon-modal-brif.svg" alt="" class="modal-simon">
        @using (Html.BeginForm("BrifModal", "Home", FormMethod.Post, new { @class = "form modal-form", id = "modalBrif" }))
        {
            <input type="hidden" name="course" id="courseHidden" value="Не выбран">

            <div class="input-block ">
                <span class="text">Номер, на который позвонить</span>
                <input type="tel" name="phone" minlength="18" class="input input-phone" placeholder="+7 (___) ___-__-__">
            </div>

            <div class="input-block ">
                <span class="text"> Ваше имя</span>
                <input type="text" name="Name" class="input" placeholder="Саймон">
            </div>

            <div class="input-block form-boxes">
                <span class="text"> Какой язык интересует</span>

                <label class="checkbox default">
                    <input type="checkbox" name="language" value="английский" checked>
                    <span class="checkbox__text"> английский</span>
                </label>

                <label class="checkbox default">
                    <input type="checkbox" name="language" value="немецкий">
                    <span class=" checkbox__text">немецкий</span>
                </label>

                <label class="checkbox default">
                    <input type="checkbox" name="privacy" id="privacy">
                    <span class="checkbox__text" style="color: #B6BCBF;">
                        Я согласен (–на) с
                        <span class="toPrivacy"> политикой конфиденциальности</span>
                    </span>
                </label>
            </div>

            <input type="submit" value="Запишите меня на урок" class="form-submit ">


        }

    </div>
</div>
