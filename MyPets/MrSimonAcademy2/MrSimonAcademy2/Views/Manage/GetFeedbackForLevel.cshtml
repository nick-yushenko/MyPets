@model IEnumerable<MrSimonAcademy2.Models.Feedback>


<section class="feedback">
    <div class="container-fluid">

        <h2 class="feedback-title">Ваш уровень</h2>
        @if (ViewBag.LevelProgress > 80)
        {
            <p class="feedback-descr">@ViewBag.LevelName и Вы приближаетесь к новой ступени! Так держать!</p>
        }
        @if (ViewBag.LevelProgress > 60 && ViewBag.LevelProgress < 80)
        {
            <p class="feedback-descr">@ViewBag.LevelName</p>
        }
        @if (ViewBag.LevelProgress > 40 && ViewBag.LevelProgress < 60)
        {
            <p class="feedback-descr">У Вас уже твердый @ViewBag.LevelName!  </p>
        }

