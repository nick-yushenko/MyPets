                    @Html.ActionLink("Войти", "Users", "Teacher", null, new { @class = "link bold" })

                }
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Войти", "Index", "Admin", null, new { @class = "link bold" })

                }
