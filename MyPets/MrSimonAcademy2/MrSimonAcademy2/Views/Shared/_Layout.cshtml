                <a href="#courses" class="link scrolledLink">Наши курсы</a>
                <a href="#founder" class="link scrolledLink">Преподаватели</a>
                <a href="#flamp" class="link scrolledLink">Отзывы</a>
                @if (Request.IsAuthenticated && User.IsInRole("Student"))
                {
                    @Html.ActionLink("Войти", "News", "Student", null, new { @class = "link bold" })

                }
