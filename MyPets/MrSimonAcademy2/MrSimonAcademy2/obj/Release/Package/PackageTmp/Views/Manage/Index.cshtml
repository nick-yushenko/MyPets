    DateTime thisDay = DateTime.Today;
    int BDyear = FullBD.Year;
    int BDmonth = FullBD.Month;
    int BDday = FullBD.Day;

}

@if (BDyear == thisDay.Year && BDmonth == thisDay.Month && BDday == thisDay.Day)
{
    <div class="container" style="margin-top: 100px">С Денем Рождения, @Html.DisplayFor(model => model.UserFName)!!!</div>
}


@Html.Action("MyGroups", new { userId = Model.Id })

@if (Model.HasFeedback)
{
    @Html.Action("GetFeedback", new { userId = Model.Id })
    @Html.Action("GetFeedbackForLevel", new { userId = Model.Id })
}
