@model MrSimonAcademy2.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}
<section class="profile">
    <div class="container">
        <div class="profile-wrap">
            <form action="#" class="profile-photo">
                <div class="profile-photo__img empty" style="background-image: url('../../Content/img/profile/empty.jpg')">
                </div>
                <div class="profile-photo__input">
                    <input type="file" name="file" id="file" class="inputfile " />
                    <label for="file">+</label>
                </div>
            </form>

            <form action="#" class="profile-descr">
                <h2 class="profile-descr__name">@Html.DisplayFor(model => model.UserFName) @Html.DisplayFor(model => model.UserLName)</h2>
                @if (this.User.IsInRole("Admin"))
                {
                    <span>Роль: @Html.DisplayFor(model => model.RoleName)</span>
                }
                <div class="row control-group">
                    <div class="form-group col-xs-6 floating-label-form-group controls">
                        <p class="profile-descr__hint">Дата рождения</p>
                        @{
                            DateTime FullBD = Model.Birthday;
                            string year = FullBD.Year.ToString("00");
                            string month = FullBD.Month.ToString("00");
                            string day = FullBD.Day.ToString("00");

                        }
                        <p class="profile-descr__text">@day.@month.@year</p>


                    </div>
                    <div class="form-group col-xs-6">
                        <!--<div class="profile-descr__edit">Изменить (doesn't work)</div>-->
                    </div>
                </div>

                <div class="row control-group">
                    <div class="form-group col-xs-6 floating-label-form-group controls">
                        <p class="profile-descr__hint">E-mail</p>
                        <p class="profile-descr__text">@Html.DisplayFor(model => model.Email)</p>
                        <!-- <label>Логин (E-mail) </label>
                        <input type="text" class="form-control" placeholder="E-mail" id="email" required
                          data_validation_required_message="Введите логин (E-mail)">
                        <p class="help-block text-danger"></p> -->

                    </div>
                    <div class="form-group col-xs-6">
                        <!--<div class="profile-descr__edit">Изменить (doesn't work)</div>-->

                    </div>

                </div>

     


            </form>
        </div>

    </div>
</section>

